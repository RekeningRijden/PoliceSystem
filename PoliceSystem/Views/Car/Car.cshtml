@model PoliceSystem.Models.Domain.Car
@{
    ViewBag.Title = "Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Car</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <div class="col-xs-8 col-xs-offset-2">
            <div class="row">
                <div class="col-xs-8">
                    <section>
                        <div class="form-group">
                            <label class="control-label">LicencPlate</label>
                            @Html.TextBoxFor(model => model.LicencePlate, new { @class = "form-control", disabled = "true" })
                        </div>
                    </section>
                </div>
                <div class="col-xs-4">
                    <section>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                      @Html.CheckBoxFor(model => model.Stolen, new { @checked = "checked", disabled="true" })
                                    <span>Stolen</span>
                                </label>
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-6">
                    <legend>Ownerships</legend>
                </div>
                <div class="col-xs-6">
                    <legend>Crime history</legend>
                </div>
            </div>
        </div>
    </fieldset>
}

