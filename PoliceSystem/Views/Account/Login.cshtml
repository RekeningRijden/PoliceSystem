@model PoliceSystem.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content" class="container">
    <div style="margin-top: 50px;">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <img src="#{root}/resources/img/logo.png"
                     class="img-responsive center-block" style="margin-bottom: 20px;"
                     alt="PoliceSystem" />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                <div class="well">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <legend>Log In</legend>
                            <div class="form-group">
                                <label class="control-label">Username</label>
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", type = "email", autofocus = "true", required = "true" })
                            </div>

                            <div class="form-group">
                                <label class="control-label">Password</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", required = "true" })
                            </div>

                            <div class="row">
                                <div class="col-xs-8">
                                    <small>
                                        S63a. Alle rechten voorbehouden!
                                    </small>
                                </div>
                                <div class="col-xs-4">
                                    <input class="btn btn-primary pull-right" value="Login" type="submit" />
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




