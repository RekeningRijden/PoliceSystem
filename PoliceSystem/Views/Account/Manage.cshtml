@model List<PoliceSystem.Models.Domain.User>
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage users</h2>

@*Misschien een partial view van maken*@
@Html.ActionLink("Register a new user", "Register", "Account", new object { }, new { @class = "btn btn-primary" })

<br />
<br/>
<table class="table table-bordered table-hover tablebackground">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PoliceSystem.Models.Domain.User user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.UserGroup.Name</td>
                    <td>
                        @if (!user.UserGroup.Name.Equals("admin"))
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = @user.Id });
                        }
                        else
                        {
                            @Html.Label("No action");
                        }
                    </td>
            </tr>
        }
    </tbody>
</table>